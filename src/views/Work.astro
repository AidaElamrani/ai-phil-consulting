---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import Hero from '../components/Hero.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import { type Lang, t } from '../i18n/ui';

interface Props {
	lang?: Lang;
}

const { lang = 'en' }: Props = Astro.props;
const copy = t(lang);
const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout lang={lang} title={copy.work.metaTitle} description={copy.work.metaDescription}>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero title={copy.work.heroTitle} tagline={copy.work.heroTagline} align="start" />
			<Grid variant="offset">
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview lang={lang} project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA heading={copy.contact.heading} ctaLabel={copy.contact.cta} />
	</div>
</BaseLayout>
